<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.safenotes.presentation.activity.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_notesFragment2"
            app:destination="@id/notesFragment2" />
        <action
            android:id="@+id/action_nav_home_to_audioNoteFragment"
            app:destination="@id/audioNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_notes"
        android:name="com.example.safenotes.presentation.activity.ui.notes.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" />
    <fragment
        android:id="@+id/nav_tags"
        android:name="com.example.safenotes.presentation.activity.ui.tags.TagsFragment"
        android:label="fragment_tags"
        tools:layout="@layout/fragment_tags" />
    <fragment
        android:id="@+id/nav_task"
        android:name="com.example.safenotes.presentation.activity.ui.tasks.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task" />
    <fragment
        android:id="@+id/nav_shared"
        android:name="com.example.safenotes.presentation.activity.ui.shared.SharedFragment"
        android:label="fragment_shared"
        tools:layout="@layout/fragment_shared" />
    <fragment
        android:id="@+id/nav_feedback"
        android:name="com.example.safenotes.presentation.activity.ui.feedback.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback" />
    <fragment
        android:id="@+id/notesFragment2"
        android:name="com.example.safenotes.presentation.activity.ui.fragments.NotesFragment"
        android:label="Edit Notes"
        tools:layout="@layout/fragment_notes" />
    <fragment
        android:id="@+id/audioNoteFragment"
        android:name="com.example.safenotes.presentation.activity.ui.fragments.audioNotes.AudioNoteFragment"
        android:label="Add Audio Note"
        tools:layout="@layout/fragment_audio_note" />
</navigation>